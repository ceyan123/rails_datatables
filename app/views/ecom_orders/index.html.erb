<p style="color: green"><%= notice %></p>

<h1>Ecom orders</h1>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Price</th>
      <th>Item Sku</th>
      <th>Purchase Order</th>
      <th>Platform Order Num</th>
      <th>Sales Channel</th>
      <th>Status</th>
      <th>Customer Name</th>
      <th>Customer State</th>
      <th>Shipped at </th>
      <th>Nums Item Shipped</th>
      <th>Payment Method</th>
      # <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @ecom_orders.each do |ecom_order| %>
      <tr>
        <td> <%= ecom_order.price %> </td>
        <td> <%= ecom_order.itek_sku %> </td>
        <td> <%= ecom_order.purchase_date %> </td>
        <td> <%= ecom_order.platform_order_num %> </td>
        <td> <%= ecom_order.sales_channel %> </td>
        <td> <%= ecom_order.status %> </td>
        <td> <%= ecom_order.customer_name %> </td>
        <td> <%= ecom_order.customer_state %> </td>
        <td> <%= ecom_order.shipped_at %> </td>
        <td> <%= ecom_order.num_items_shipped %> </td>
        <td> <%= ecom_order.payment_method %> </td>
        # <td> <%= ecom_order.price %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New ecom order", new_ecom_order_path %>
